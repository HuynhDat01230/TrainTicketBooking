@model TrainProject.Models.TaiKhoan

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>TaiKhoan</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-10">
            Tên tài khoản:
            <input type="text" name="TenTK"  style="margin-left:30px"/>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            Email:
            <input type="text" name="EmailTK"  style="margin-left:77px"/>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            Số điện thoại:
            <input type="text" name="SoDienThoai" style="margin-left:32px"/>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            Mật khẩu:
            <input type="text" name="MatKhau" style="margin-left:55px"/>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            Xác nhận mật khẩu:
            <input type="text" name="XacNhanMatKhau" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" style="border:solid 1px" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
